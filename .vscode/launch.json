    "version": "0.2.0",
    "configurations": [
        {
            "name": "Test",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--test"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "preLaunchTask": "npm: build:all",
            "console": "integratedTerminal"
        },
        {
            "name": "Launch current",
            "type": "node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}",
            "outFiles": [
                "${workspaceFolder}/**/*.mjs"
            ],
            "preLaunchTask": "npm: build:all",
            "console": "integratedTerminal"
        }
    ]
}